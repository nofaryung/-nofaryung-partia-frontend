<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pincoloractivity"
    tools:context=".ActivityJoinEvent">


    <Button
        android:id="@+id/btn_joinExistEvent"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/textview_PINcode"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="@color/btnColor_startMenu"
        android:onClick="join_event_btn_clicked"
        android:text="@string/cheers"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/textview_PINcode"
        android:layout_width="265dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/textview_bg_pincode"
        android:gravity="center"
        android:hint="@string/pincode"
        android:importantForAutofill="no"
        android:inputType="none"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>