<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pincoloractivity"
    tools:context=".ActivityStatistics">


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="355dp">
    </com.github.mikephil.charting.charts.PieChart>

    <Button
        android:id="@+id/btn_NextStatistic"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/pieChart"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="@color/btnColor_startMenu"
        android:onClick="next_statistic_btn_clicked"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_goToEquipList"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/btn_NextStatistic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="@color/btnColor_startMenu"
        android:onClick="goToEqipList_btn_clicked"
        android:text="Equipment list"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>